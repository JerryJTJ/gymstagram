<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A1EFEFEF"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HistoryPage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:paddingRight="0dp"
                android:background="@color/white"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/profile_pic_man"></ImageView>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="username"
                        android:textSize="24dp"></TextView>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/numWorkouts"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="2"
                                android:layout_gravity="center"
                                android:gravity="center"

                                android:textSize="18dp"></TextView>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="Workouts"
                                android:layout_gravity="center"
                                android:gravity="center"

                                android:textSize="15dp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/numMeals"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="3"
                                android:layout_gravity="center"
                                android:gravity="center"

                                android:textSize="18dp"></TextView>

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:text="Meals"
                                android:gravity="center"

                                android:textSize="15dp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Workout History"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/historyPageLinearLayout"
                android:orientation="vertical"
                >
            </LinearLayout>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Meals History"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/historyPageLinearLayoutMeals"
                android:orientation="vertical"

                >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>
